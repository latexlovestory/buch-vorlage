{
    "latex-workshop.latex.recipe.default": "Baue pdf",
    "latex-workshop.latex.autoBuild.run": "onSave",
    "latex-workshop.view.pdf.viewer": "tab",
    "latex-workshop.latex.tools": [
  {
    "name": "lualatex",
    "command": "latexmk",
    "args": [
      "-lualatex",
      "%DOCFILE%"
    ]
  },
  {
    "name": "clean temp pdf",
    "command": "latexmk",
    "args": [
      "-c"
    ]
  },
  {
    "name": "tex4ebook epub",
    "command": "tex4ebook",
    "args": [
      "-f", "epub",
      "-B", "temp",
      "%DOCFILE%"
    ]
  },


    ],
    "latex-workshop.latex.recipes": [
        {
            "name": "Baue pdf",
            "tools": ["lualatex", "clean temp pdf"]
        },
        {
            "name": "Baue epub",
            "tools": ["tex4ebook epub"]
        },
        {
            "name": "Baue pdf und epub",
            "tools": ["lualatex", "clean temp pdf", "tex4ebook epub"]
        }
    ],
     "cSpell.language": "de, en",
    "cSpell.enableFileTypes": [
        "latex",
        "tex"
    ],
    "cSpell.words": [
      "Catalina",
      "EPUB",
      "Strg",
      "Wolter"
    ]
}